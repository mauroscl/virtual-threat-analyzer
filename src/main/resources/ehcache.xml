<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.ehcache.org/v3"
  xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
  xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">


  <cache-template name="default-configuration">
    <listeners>
      <listener>
        <class>br.com.mauroscl.virtualthreatanalyzer.config.CacheEventLogger</class>
        <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
        <event-ordering-mode>UNORDERED</event-ordering-mode>
        <events-to-fire-on>CREATED</events-to-fire-on>
        <events-to-fire-on>EXPIRED</events-to-fire-on>
        <!-- este evento não está sendo disparado no log, mas está fazendo o EVICT corretamente!-->
        <events-to-fire-on>EVICTED</events-to-fire-on>
      </listener>
    </listeners>

  </cache-template>

  <cache alias="clientRules" uses-template="default-configuration">
    <key-type>java.lang.String</key-type>
    <value-type>java.util.List</value-type>
    <expiry>
      <ttl unit="seconds">30</ttl>
    </expiry>

    <resources>
      <heap unit="MB">100</heap>
      <!--      <offheap unit="MB">100</offheap>-->
    </resources>
  </cache>

  <cache alias="globalRules" uses-template="default-configuration">
    <value-type>java.util.List</value-type>
    <expiry>
      <ttl unit="seconds">30</ttl>
    </expiry>

    <resources>
      <heap unit="entries">1</heap>
      <!--      <offheap unit="MB">100</offheap>-->
    </resources>
  </cache>

</config>